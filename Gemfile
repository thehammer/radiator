source 'http://rubygems.org'

gem 'rails', '3.0.0'

# PostgreSQL Rails adapter
gem 'pg'

# Basic template stuff
gem 'haml', ">= 3.0.18"
gem "compass", ">= 0.10.5"

# Used for the admin interface
gem 'typus', :git => 'git://github.com/fesplugas/typus.git'

# Used for updating the display and running background jobs
gem "rufus-scheduler", :git => "git://github.com/jmettraux/rufus-scheduler.git"
gem 'delayed_job'

# The underlying "talk to the USB betabrite packages"
gem 'betabrite', :path => "vendor/betabrite"
gem 'ruby-usb', :require => 'usb', :path => "vendor/ruby-usb"

# Used for the toodledo plugin
gem 'logging'
gem 'toodledo', :git => "git://github.com/wsargent/toodledo.git"

